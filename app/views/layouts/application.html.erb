    <header class="navbar">
      <div class="container">
        <%= link_to "Attendance App", '#', id: "logo" %>
        <nav>
          <ul class="nav">
            <li><%= link_to "トップへ", '#' %></li>
            <li><%= link_to "ログイン", '#' %></li>
          </ul>
